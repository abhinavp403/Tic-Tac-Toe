<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:padding="10dip"
    tools:context="com.dev.abhinav.tic_tac_toe.Help">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/help_howtoplay_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/howtoplay_title"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/help_howtoplay_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/howtoplay_Content"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/settings_help_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/settings_help_title"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/settings_help_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_help_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>
    </LinearLayout>

</ScrollView>